h1 New a Card
#href
  a(href='/adm') Adm Panel
fieldset(id='inputs')
  form(id='new_card', method='post', action='/adm/new_card')
    p
      label(for='name') Name :
      input(id='name', name='name', type='text', required='required')
    p
      label(for='unit') Unit:
      input(id='unit', name='unit', type='text', required='required')
    p
      label(for='category') Category:
      input(id='category', name='category', type='text', required='required')
    p
      input(id='submit', type='submit', value='New')
